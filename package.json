  "description": "Complete Authentication Backend with Node.js, Express, TypeScript, and MySQL",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
